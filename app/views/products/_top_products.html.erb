<div class="bg-orange top-item">
  <%#= image_tag Cloudinary::Utils.cloudinary_url("speaker-zx9") %>
  <%= image_tag "home/#{session[:device]}/image-speaker-zx9" %>
  <div class="top-content">
    <p class='top-item-name'><%= @top_two[:first].name_splitted.first.upcase %></p>
    <p class='top-item-name second-name'><%= @top_two[:first].name_splitted.second.upcase %></p>
    <p class='top-item-description'>Upgrade to premium speakers that are phenomenally built to deliver truly remarkable sound.</p>
    <%= link_to  "SEE PRODUCT", category_product_path(@top_two[:first].category, @top_two[:first]), class: 'black-button' %>
  </div>
</div>

<div class="second-speaker" style="background-image: url(<%= asset_path("product-#{@top_two[:second].name.downcase.gsub(' ', '-')}/#{session[:device]}/image-gallery-3.jpg") %>)">
  <p><%= @top_two[:second].name.upcase %></p>
  <%= link_to  "SEE PRODUCT", category_product_path(@top_two[:second].category, @top_two[:second]), class: 'black-button' %>
</div>


<div class="top_earphone">
  <%= image_tag "product-#{image_folder_name(@top_earphone)}/#{session[:device]}/image-gallery-1.jpg", width: '100%', style: 'border-radius: 8px;' %>
  <div class="earphone-content">
    <p><%= @top_earphone.small_name.upcase %></p>
    <%= link_to  "SEE PRODUCT", category_product_path(@top_earphone.category, @top_earphone), class: 'outline-btn' %>
  </div>
</div>
