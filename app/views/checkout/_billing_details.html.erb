<div class="form-row">
  <div class="col">
    <div class="form-group">
      <%= form.label :first_name, "Name", class: "form-header-bold" %>
      <%= form.text_field :first_name, class: 'form-control' %>
    </div>
  </div>
  <div class="col">
    <div class="form-group">
      <%= form.label :email, "Email address", class: "form-header-bold" %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>
  </div>
</div>
<div class="form-row">
  <div class="col col-sm-6">
    <div class="form-group">
      <%= form.label :phone_number, "Phone number", class: "form-header-bold" %>
      <%= form.text_field :phone_number, class: 'form-control' %>
    </div>
  </div>
</div>
